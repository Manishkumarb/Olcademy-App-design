<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.olcademy.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:background="#ffffff"
        android:hint="Search here for products, Brands"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:paddingTop="10dp"
        android:src="@drawable/ic_search_black_24dp" />
    <TextView
        android:id="@+id/today_deals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Deals"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/editText"
        android:padding="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="View All"
        android:background="#ffffff"
        android:layout_below="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginTop="70dp"
        android:elevation="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            tools:context=".GridXMLActivity">

            <RelativeLayout>

                <ImageView
                    android:id="@+id/school_bag"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ear" />

                <TextView
                    android:id="@+id/des_earphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/school_bag"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:text="JBL Ear phone"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_earphone"
                    android:layout_centerHorizontal="true"
                    android:text="Extra 10% off"
                    android:textColor="#43ad29" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    android:id="@+id/slippers"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView1"
                    android:src="@drawable/bag" />

                <TextView
                    android:id="@+id/des_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slippers"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:text="WildCraft Bag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_bag"
                    android:layout_centerHorizontal="true"
                    android:text="Extra 15% off"
                    android:textColor="#43ad29" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    android:id="@+id/slippersp"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView4"
                    android:src="@drawable/slippers" />

                <TextView
                    android:id="@+id/des_slipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slippersp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:text="Puma Flipflop"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_slipper"
                    android:layout_centerHorizontal="true"
                    android:text="Under 499"
                    android:textColor="#43ad29" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    android:id="@+id/shoes"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView"
                    android:src="@drawable/tv" />

                <TextView
                    android:id="@+id/des_shoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shoes"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:text="Samsung Tv"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_shoes"
                    android:layout_centerHorizontal="true"
                    android:text="Upto 30% off"
                    android:textColor="#43ad29" />
            </RelativeLayout>


        </GridLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
